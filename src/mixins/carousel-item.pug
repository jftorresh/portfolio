//- Item active
mixin carouselItem-active(label, title, text, url, img)
  .carousel-item.active
    .row.ai-center
      .offset-md-2.col-md-4
        span.text-uppercase.ls-4= label
        .sub-dark
        h1= title
        p= text
        a.btn.btn-main(href= url) Explorar Proyecto
      .col-md-6
        img.img.img-fluid.w-100.h-auto(src=`./dist/media/img/${img}` style="max-height: 80vh;")

